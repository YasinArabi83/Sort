<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/assets/css/Compare.css"/>
    <title>@ViewBag.Title</title>
</head>
<body>

    <header class="shadow zindex-toast fixed-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-light ">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/assets/img/logo.png"
                         alt="Logo"
                         height="40"
                         width="140"
                         class="img-fluid" />
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDarkDropdown"
                        aria-controls="navbarNavDarkDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/" aria-current="page">خانه <span class="visually-hidden">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/sortreview">مقایسه سرعت </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/uploadfile">اپلود فایل </a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>



    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>

</body>
</html>
